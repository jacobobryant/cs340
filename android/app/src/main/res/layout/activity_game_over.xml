<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.thefunteam.android.activity.GameOverActivity">

    <RelativeLayout
            android:layout_width="1264dp"
            android:layout_height="747dp" tools:layout_editor_absoluteY="8dp"
            tools:layout_editor_absoluteX="8dp">

        <Button
                android:text="Back To Game List"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/backtomenu"
                android:layout_marginBottom="44dp" android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"/>
        <RelativeLayout
                android:layout_width="1200dp"
                android:layout_height="600dp"
                android:layout_marginTop="18dp" android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true">

            <TableRow
                    android:layout_width="200dp"
                    android:layout_height="600dp"
                    android:layout_marginEnd="25dp"
                    android:layout_alignParentTop="true" android:layout_toStartOf="@+id/row2"
                    android:id="@+id/row1">
                <TextView
                        android:text="no player"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView"/>
            </TableRow>
            <TableRow
                    android:layout_width="200dp"
                    android:layout_height="600dp"
                    android:layout_marginEnd="25dp"
                    android:layout_alignParentTop="true" android:layout_toStartOf="@+id/row3"
                    android:id="@+id/row2">
                <TextView
                        android:text="no player"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView2"/>
            </TableRow>
            <TableRow
                    android:layout_width="200dp"
                    android:layout_height="600dp"
                    android:layout_centerVertical="true" android:layout_centerHorizontal="true"
                    android:id="@+id/row3">
                <TextView
                        android:text="no player"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView3"/>
            </TableRow>
            <TableRow
                    android:layout_width="200dp"
                    android:layout_height="600dp"
                    android:id="@+id/row4"
                    android:layout_marginStart="25dp"
                    android:layout_alignParentTop="true" android:layout_toEndOf="@+id/row3">
                <TextView
                        android:text="no player"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView4"/>
            </TableRow>
            <TableRow
                    android:layout_width="200dp"
                    android:layout_height="600dp"
                    android:id="@+id/row5"
                    android:layout_alignParentTop="true" android:layout_toEndOf="@+id/row4"
                    android:layout_marginStart="25dp">
                <TextView
                        android:text="no player"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView8"/>
            </TableRow>
        </RelativeLayout>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
