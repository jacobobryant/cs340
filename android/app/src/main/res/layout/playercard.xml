<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:id="@+id/cardView"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation = "vertical">

            <TextView
                    android:id="@+id/username"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="Username"/>
            <TextView
                    android:id="@+id/playercolor"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="player color"/>
            <TextView
                    android:id="@+id/score"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="Score: "/>
            <TextView
                    android:id="@+id/destcards"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:text="Destination Cards:\n
\t new york to salt lake city\n
..."/>
            <TextView
                    android:id="@+id/traincards"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:text="Train Cards:\n
\t purple:
\t white:
\t blue:
\t yellow:
\t orange:
\t black:
\t red:
\t green:
\t any:"/>

            <TextView
                    android:id="@+id/trainsleft"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="Train Left: "/>

        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
